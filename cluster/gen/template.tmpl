{{- range $name, $url := .context.repos }}
---
apiVersion: source.toolkit.fluxcd.io/v1beta1
kind: HelmRepository
metadata:
  name: {{ $name }}
  namespace: flux-system
spec:
  interval: ${REPO_INTERVAL}
  url: {{ $url }}
{{- end }}

---

{{- range $name := .context.namespaces }}
apiVersion: v1
kind: Namespace
metadata:
  name: {{ $name }}
{{- end }}
